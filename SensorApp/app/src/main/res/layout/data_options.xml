<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="sensor.com.sensorapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/data_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center|bottom"
        android:orientation="vertical"
        >

        <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="year"
        />

        <Button
        android:id="@+id/buttoncond"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
            android:layout_gravity="center"
        android:visibility="gone"
        android:text="Conductivity"
        />

        <Button
            android:id="@+id/buttonsali"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="Salinity"
            />

        <Button
            android:id="@+id/buttonden"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="Density"
            />

        <Button
            android:id="@+id/buttontemp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="Temperature"
            />
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
